<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.page.NormalScheduleActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:baselineAligned="false"
            android:paddingTop="8dp">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:id="@+id/img_back_normal_schedule"
                    android:background="@drawable/bg_ripple"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chevron_left"
                    android:padding="8dp"
                    android:clickable="true">
            </ImageView>
        <ImageView
                android:id="@+id/img_icon_normal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:src="@drawable/ic_color_info"/>
        <TextView
                android:id="@+id/tbx_title_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="@string/title_mySchedule"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_collaborator_normal_schedule"
                android:background="@drawable/bg_ripple"
                android:layout_gravity="center"
                android:src="@drawable/ic_share"
                android:padding="10dp"
                android:clickable="true">
        </ImageView>
        <TextView
                android:id="@+id/tbx_user_normal"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="88"
                android:gravity="center"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:id="@+id/img_more_normal_schedule"
                android:background="@drawable/bg_ripple"
                android:layout_gravity="center"
                android:src="@drawable/ic_more_vert"
                android:padding="8dp"
                android:clickable="true">
        </ImageView>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_item"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <androidx.cardview.widget.CardView
                    android:id="@+id/card_add_normal"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                    <ImageView
                            android:id="@+id/img_add_normal"
                            android:layout_width="48dp"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_circle"
                            android:layout_marginStart="4dp"
                            android:tint="@color/colorNormal"/>
                    <EditText
                            android:id="@+id/edt_title_normal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorLight"
                            android:hint="添加任务"/>
                    <ImageView
                            android:layout_width="48dp"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_add"
                            android:tint="@color/colorNormal"/>
                </LinearLayout>
                <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="48dp">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                        <LinearLayout
                                android:id="@+id/btn_type_normal"
                                android:background="@drawable/shape_corner"
                                android:layout_height="32dp"
                                android:layout_width="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginStart="16dp"
                                android:clickable="true">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:src="@drawable/ic_local_offer"
                                    android:layout_gravity="center_vertical"
                                    android:tint="@color/colorPrimary"/>
                            <TextView
                                    android:id="@+id/tbx_type_normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    android:text="任务"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/btn_time_normal"
                                android:background="@drawable/shape_corner"
                                android:layout_height="32dp"
                                android:layout_width="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginStart="16dp"
                                android:clickable="true">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:src="@drawable/ic_rotate_right"
                                    android:layout_gravity="center_vertical"
                                    android:tint="@color/colorPrimary"/>
                            <TextView
                                    android:id="@+id/tbx_time_normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    android:text="设置截止日期"/>
                            <ImageView
                                    android:id="@+id/btn_close_time"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:paddingVertical="6dp"
                                    android:layout_marginStart="4dp"
                                    android:src="@drawable/ic_cancel_black_24dp"
                                    android:tint="@color/colorDisplay"
                                    android:clickable="true"/>
                        </LinearLayout>
                        <LinearLayout
                                android:background="@drawable/shape_corner"
                                android:layout_height="32dp"
                                android:layout_width="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginStart="16dp"
                                android:clickable="true">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:src="@drawable/ic_alarm_black_24dp"
                                    android:layout_gravity="center_vertical"
                                    android:tint="@color/colorPrimary"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    android:text="提醒"/>
                            <ImageView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginVertical="8dp"
                                    android:src="@drawable/ic_cancel_black_24dp"
                                    android:tint="@color/colorDisplay"/>
                        </LinearLayout>
                        <LinearLayout
                                android:background="@drawable/shape_corner"
                                android:layout_height="32dp"
                                android:layout_width="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_margin="16dp"
                                android:clickable="true">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:src="@drawable/ic_repeat_black_24dp"
                                    android:layout_gravity="center_vertical"
                                    android:tint="@color/colorPrimary"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack"
                                    android:text="重复"/>
                            <ImageView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginVertical="8dp"
                                    android:src="@drawable/ic_cancel_black_24dp"
                                    android:tint="@color/colorDisplay"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/float_button_add_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:fabSize="auto"
                android:src="@drawable/ic_add_black"
                android:tint="@color/colorLight"
                android:clickable="true"
                android:background="@drawable/bg_ripple"
                android:layout_margin="16dp"/>

    </RelativeLayout>

</LinearLayout>